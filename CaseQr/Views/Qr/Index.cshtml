@model List<HolgramQr>

<div class="mt-4">
    <form method="post" asp-action="Index" enctype="multipart/form-data" class="row g-3 needs-validation">

        <div class="row mt-4">
            <div class="col-4">

                <div class="mb-3">
                    <label for="FSSAI Certificate">Documents</label>
                    <input type="file" accept=" application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
                           placeholder="Please Upload File Here" name="OtherDocuments" class="form-control custom-file-input" id="OtherDocuments" />

                    <span id="docerror3" class="text-danger"></span>
                </div>

            </div>
            <div class="col-2" style="padding-top:25px">
                <button type="submit" class="btn btn-success btn-label waves-effect waves-light rounded-pill"><i class="ri-check-double-line label-icon align-middle rounded-pill fs-16 me-2"></i>Submit</button>

            </div>
        </div>
    </form>
</div>


@if (Model.Count > 0)
{
    <div class="row border border-bottom">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <!-- Change col-12 to col-3 for 4 items per row -->
                <div class="m-2 text-center">
                    <img src="@item.qrdata" class="img-thumbnail m-2" style="height:120px" />
                    <p>@item.CaseNo</p>
                </div>
            </div>
        }
    </div>
}
